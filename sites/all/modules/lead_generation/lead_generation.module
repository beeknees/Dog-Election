<?php

/**
* @file
* A block displaying a lead generation form
*/

function lead_generation_help($path, $arg) {
  switch ($path) {
    case "admin/help#lead_generation":
    return '<p>' . t("A form that is used to generate leads for the candidate.") . '</p>';
    break;
  }
}

/* generate block */
function lead_generation_block_info() {
  $blocks['lead_generation'] = array (
    'info' => t('Lead Generation'),
    // default setting
    'cache' => DRUPAL_CACHE_PER_ROLE,
  );
  return $blocks;
}

function lead_generation_form($form, &$form_state) {
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Submit'),
    );
  return $form;
}




