function lead_generation_menu($may_cache) {
  $items[] = array();
  if ($may_cache) {
    $items[] = array (
      'path' => 'form',
      'title' => t('Tell us what you think'),
      'callback' => 'lead_generation_page',
      'access' => TRUE,
      'type' => MENU_CALLBACK, 
    );
  }
  return $items;
}

function lead_generation_page() {
  return drupal_get_form('lead_generation_form');
}


function lead_generation_form() {
  $form['fullname'] = array(
    '#type' => 'textfield',
    '#title' => t('Enter your full name'),
  );
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Save'),
  );
  return $form;
}

function lead_generation_page_form_submit($form_id, $form_values) {
  $message = 'You have submitted the ' . $form_id . ' form which contains the following data: ' . print_r($form_values, true);
  drupal_set_message(T($message));
}

